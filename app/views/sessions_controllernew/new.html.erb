<h2> Connection </h2>

<body>
  <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'email' %>
    <%= text_field_tag 'email', @user.email %>
    <br /> <br />

    <%= label_tag 'password' %>
    <%= password_area_tag 'password', @user.password %>
    <br /> <br />

    <%= submit_tag "Se connecter" %>

  <% end %>
</body>